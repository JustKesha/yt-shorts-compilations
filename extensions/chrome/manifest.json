{
    "manifest_version": 3,
    "name": "YouTube Shorts Collections",
    "version": "1.0",
    "description": "Quickly create and share collections of YouTube Shorts",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "./scripts/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./icons/icon16.png",
            "48": "./icons/icon48.png",
            "128": "./icons/icon128.png"
        }
    },
    "commands": {
        "save-to-playlist-1": {
            "suggested_key": {
                "default": "Alt+Shift+Z",
                "mac": "Command+Shift+1"
            },
            "description": "Save to Playlist 1"
        },
        "save-to-playlist-2": {
            "suggested_key": {
                "default": "Alt+Shift+X",
                "mac": "Command+Shift+2"
            },
            "description": "Save to Playlist 2"
        },
        "save-to-playlist-3": {
            "suggested_key": {
                "default": "Alt+Shift+C",
                "mac": "Command+Shift+3"
            },
            "description": "Save to Playlist 3"
        },
        "save-to-playlist-4": {
            "suggested_key": {
                "default": "Alt+Shift+V",
                "mac": "Command+Shift+4"
            },
            "description": "Save to Playlist 4"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "./icons/icon16.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    }
}